<Window x:Class="Hemuppgift_WPFtemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="GridButton" Grid.Row="0" Grid.Column="0" Content="Grid" Click="GridButton_Click"/>
        <Button x:Name="StackButton" Grid.Row="0" Grid.Column="1" Content="StackPanel" Click="StackButton_Click"/>
        <Button x:Name="WrapButton" Grid.Row="1" Grid.Column="0" Content="WrapPanel" Click="WrapButton_Click"/>
        <Button x:Name="DockButton" Grid.Row="1" Grid.Column="1" Content="DockPanel" Click="DockButton_Click"/>
    </Grid>
 </Window>
